<!-- app/views/devise/sessions/new.html.erb -->
<div class="min-vh-100 d-flex align-items-center justify-content-center" style="background-image: url('<%= asset_path("pos_background.jpg") %>'); background-size: cover; background-position: center;">
  <div class="container" style="max-width: 420px;">
    <div class="card shadow-lg bg-white bg-opacity-95">
      <div class="card-body p-4">
        
        <!-- Logo as Text -->
        <div class="text-center mb-4">
          <h1 class="h4 fw-bold text-primary">MyPOS</h1>
        </div>

        <!-- Header -->
        <h2 class="h5 text-center text-dark fw-semibold mb-4">Sign in to your account</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "needs-validation", novalidate: true }) do |f| %>
          <div class="mb-3">
            <%= f.label :email, "Email", class: "form-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :password, "Password", class: "form-label" %>
            <%= f.password_field :password, autocomplete: "current-password", required: true, class: "form-control" %>
          </div>

          <div class="form-check mb-3">
            <%= f.check_box :remember_me, class: "form-check-input", id: "remember_me" %>
            <%= f.label :remember_me, "Remember me", class: "form-check-label", for: "remember_me" %>
          </div>

          <div class="d-flex justify-content-end mb-3">
            <%= link_to "Forgot password?", new_password_path(resource_name), class: "small text-primary" %>
          </div>

          <div class="d-grid">
            <%= f.submit "Sign In", class: "btn btn-primary" %>
          </div>
        <% end %>

       <% if devise_mapping.registerable? %>
  <p class="mt-4 text-center text-muted small">
    Donâ€™t have an account?
    <%= link_to "Sign up", new_registration_path(resource_name), class: "text-decoration-none text-primary fw-semibold" %>
  </p>
<% end %>

