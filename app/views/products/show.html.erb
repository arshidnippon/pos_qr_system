<h1 class="text-2xl font-bold text-blue-700 mb-6">Product Details</h1>

<!-- Product Info Card -->
<div class="bg-white shadow rounded-lg p-6 mb-6">
  <dl class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
    <div>
      <dt class="font-semibold text-gray-700">Name</dt>
      <dd class="text-gray-800 mt-1"><%= @product.name %></dd>
    </div>
    <div>
      <dt class="font-semibold text-gray-700">SKU</dt>
      <dd class="text-gray-800 mt-1"><%= @product.sku %></dd>
    </div>
    <div>
      <dt class="font-semibold text-gray-700">Quantity</dt>
      <dd class="text-gray-800 mt-1"><%= @product.quantity %></dd>
    </div>
    <div>
      <dt class="font-semibold text-gray-700">Expire Date</dt>
      <dd class="text-gray-800 mt-1"><%= @product.expire_date %></dd>
    </div>
  </dl>

  <div class="mt-6 flex flex-wrap gap-3">
    <%= link_to "Edit", edit_product_path(@product), class: "bg-yellow-500 text-white px-4 py-2 rounded hover:bg-yellow-600 text-sm" %>
    <%= link_to "Back", products_path, class: "bg-gray-300 text-gray-800 px-4 py-2 rounded hover:bg-gray-400 text-sm" %>
    <%= link_to "Delete", product_path(@product), method: :delete, data: { confirm: "Are you sure?" }, class: "bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600 text-sm" %>
  </div>
</div>

<!-- QR Code Card -->
<div class="bg-white shadow rounded-lg p-6 text-center mt-8">
  <h2 class="text-lg font-semibold text-gray-800 mb-4">QR Code for SKU</h2>

  <% if @qr %>
    <div class="inline-block bg-white p-4 border rounded">
      <%= raw @qr.as_svg(module_size: 4) %>
    </div>

    <!-- Download Button -->
    <div class="mt-6 space-x-4">
  <%= link_to "Download QR Code", download_qr_product_path(@product),
      class: "inline-block bg-blue-500 hover:bg-blue-700 text-white text-sm font-medium px-4 py-2 rounded shadow" %>

  <%= link_to "Print QR Code", print_qr_product_path(@product),
      class: "inline-block bg-blue-500 hover:bg-indigo-700 text-white text-sm font-medium px-4 py-2 rounded shadow", target: "_blank" %>
</div>


  <% else %>
    <p class="text-sm text-gray-500">QR code is not available.</p>
  <% end %>
</div>
