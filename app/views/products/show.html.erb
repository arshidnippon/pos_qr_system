<div class="container my-5">
  <h1 class="h4 fw-bold text-primary mb-4">Product Details</h1>

  <!-- Product Info Card -->
  <div class="card mb-4 shadow-sm">
    <div class="card-body">
      <dl class="row mb-0">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9"><%= @product.name %></dd>

        <dt class="col-sm-3">SKU</dt>
        <dd class="col-sm-9"><%= @product.sku %></dd>

        <dt class="col-sm-3">Quantity</dt>
        <dd class="col-sm-9"><%= @product.quantity %></dd>

        <dt class="col-sm-3">Expire Date</dt>
        <dd class="col-sm-9"><%= @product.expire_date %></dd>
      </dl>
    </div>

    <div class="card-footer bg-white border-top-0 d-flex flex-wrap gap-2">
      <%= link_to "Edit", edit_product_path(@product), class: "btn btn-warning btn-sm text-white" %>
      <%= link_to "Back", products_path, class: "btn btn-secondary btn-sm" %>
      <%= link_to "Delete", product_path(@product), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
    </div>
  </div>

  <!-- QR Code Card -->
  <div class="card text-center shadow-sm">
    <div class="card-body">
      <h5 class="card-title">QR Code for SKU</h5>

      <% if @qr %>
        <div class="border rounded p-3 d-inline-block bg-white my-3">
          <%= raw @qr.as_svg(module_size: 4) %>
        </div>

        <!-- Download & Print -->
        <div class="mt-3 d-flex flex-wrap justify-center gap-2">
          <%= link_to "Download QR Code", download_qr_product_path(@product), class: "btn btn-primary btn-sm" %>
          <%= link_to "Print QR Code", print_qr_product_path(@product), class: "btn btn-info btn-sm text-white", target: "_blank" %>
        </div>
      <% else %>
        <p class="text-muted small mt-3">QR code is not available.</p>
      <% end %>
    </div>
  </div>
</div>
