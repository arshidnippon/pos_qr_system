<div id="<%= dom_id product %>" class="my-4 p-4 border rounded bg-light">
  <div class="mb-2">
    <strong class="d-block text-muted small">Name:</strong>
    <span class="fs-6"><%= product.name %></span>
  </div>

  <div class="mb-2">
    <strong class="d-block text-muted small">SKU:</strong>
    <span class="fs-6"><%= product.sku %></span>
  </div>

  <div class="mb-2">
    <strong class="d-block text-muted small">Quantity:</strong>
    <span class="fs-6"><%= product.quantity %></span>
  </div>

  <div>
    <strong class="d-block text-muted small">Expire Date:</strong>
    <span class="fs-6"><%= product.expire_date %></span>
  </div>
</div>
