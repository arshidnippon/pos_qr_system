<% grocery_product_names = [
  "Beras Super 5kg", "Minyak Masak 1L", "Gula Pasir", "Garam Halus", "Telur Ayam 10s",
  "Susu Pekat Manis", "Susu Cair", "Sardin Tin", "Mee Kuning", "Bihun Cap Rambutan",
  "Maggi Kari 5-pack", "Sos Cili", "Sos Tomato", "Kicap Manis", "Kicap Masin",
  "Teh Boh 25s", "Nescafe 3-in-1", "Milo 1kg", "Air Mineral 1.5L", "Roti Gardenia",
  "Buttercup Margarine", "Keju Cheddar", "Ayam Segar 1kg", "Ikan Kembung", "Daging Lembu",
  "Sayur Sawi", "Kangkung", "Kobis Bulat", "Tomato", "Timun",
  "Bawang Merah", "Bawang Putih", "Cili Kering", "Serbuk Kari Daging", "Serbuk Kunyit",
  "Rempah Kurma", "Daun Kari", "Santan Kotak", "Tepung Gandum", "Tepung Jagung",
  "Biskut Marie", "Keropok Lekor", "Kuih Bahulu", "Aiskrim Paddle Pop", "Agar-Agar Strip",
  "Air Soya", "Minuman Yogurt", "Cuka Masakan", "Asam Jawa", "Serbuk Coklat"
] %>

<%= form_with(model: product, local: true, html: { class: "needs-validation" }) do |form| %>
  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.select :name, options_for_select(grocery_product_names, selected: product.name), 
      { prompt: "Select a product" }, 
      class: "form-select", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :sku, class: "form-label" %>
    <%= form.text_field :sku, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :quantity, class: "form-label" %>
    <%= form.number_field :quantity, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :initial_stock, "Initial Stock", class: "form-label" %>
    <%= form.number_field :initial_stock, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :expire_date, class: "form-label" %>
    <%= form.date_field :expire_date, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :alert_email, "Alert Email", class: "form-label" %>
    <%= form.email_field :alert_email, class: "form-control", required: true %>
  </div>

  <div class="d-grid">
    <%= form.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
