<h1 class="mb-4">Notifications</h1>
<div class="mb-3">
<%= link_to "← Back to Dashboard", root_path, class: "btn btn-light btn-sm" %>
</div>

<% if @notifications.any? %>
  <ul class="list-group">
    <% @notifications.each do |notification| %>
      <li class="list-group-item <%= 'list-group-item-secondary' if notification.read %>">
        <%= notification.message %>
        <small class="text-muted d-block"> <%= notification.created_at.strftime("%b %d, %Y %H:%M") %> </small>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No notifications yet.</p>
<% end %>
